<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i>
          Inscription
        </h1>
        <%- include('./partials/messages'); %>
          <form action="/users/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
            </div>
            <div class="form-group">
              <label for="password">Mot de passe</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe" value="<%= typeof password != 'undefined' ? password : '' %>"/>
            </div>
            <div class="form-group">
              <label for="password2">Confirmez le mot de passe</label>
              <input type="password" id="password2" name="password2" class="form-control" placeholder="Mot de passe" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
            </div>
            <div class="col-12" style="text-align: center;">
              <button type="submit" class="btn btn-outline-secondary">Créer mon compte</button>
            </div>
          </form>
          <p class="lead mt-4">Vous avez déjà un compte?
            <a style="color:#F57A01;" href="/users/login">Connectez vous</a>
          </p>
        </div>
      </div>
    </div>
  </div>
